{
  "version": "2.0.0",
  "inputs": [
    { "id": "msg", "type": "promptString", "description": "Commit message" }
  ],
  "tasks": [
    {
      "label": "Commit & Push",
      "type": "shell",
      "command": "git add -A && (git diff --cached --quiet || git commit -m \"${input:msg}\") && git push",
      "options": {
        "shell": {
          "executable": "C:\\Windows\\System32\\cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Amend Last & Push",
      "type": "shell",
      "command": "git add -A && git commit --amend --no-edit && git push -f",
      "options": {
        "shell": {
          "executable": "C:\\Windows\\System32\\cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "problemMatcher": []
    }
  ]
}

